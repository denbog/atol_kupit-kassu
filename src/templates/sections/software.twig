<h3>Программное обеспечение</h3>
<div class="row">
    {% for key in software %}
    <div class="col-xs-12 col-sm-6 col-xl-3 d-flex">
        <div class="card card--sm d-flex">
            <div class="card__icon-right">
                <img src="{{ catalog[key].image }}" alt="">
            </div>
            <h4>{{ catalog[key].name }}</h4>
            <p class="fs-big color-red mt-a">{{ catalog[key].price }}</p>
            <a href="#product-{{ key }}" class="btn btn--outline btn--block btn--sm covering-link js-product">Узнать подробнее</a>
        </div>
    </div>
    {% endfor %}
</div>